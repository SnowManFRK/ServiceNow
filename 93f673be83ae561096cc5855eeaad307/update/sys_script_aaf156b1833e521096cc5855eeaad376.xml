        var status = outputs['status']; // String

        if (status == '200') {
            gs.addInfoMessage('Remote update has been '+val[current.status][1]+' successfully in remote instance');
            current.status = val[current.status][2];
            current.update();

			var grTask = current.task.getRefRecord();
			grTask.collision=parseInt(grTask.collision-1);
			grTask.update();
        }

    } catch (ex) {
        var message = ex.getMessage();
        gs.error(message);
    }

})(current, previous);]]></script>
